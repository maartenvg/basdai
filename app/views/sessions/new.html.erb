<% if flash[:alert] %>
<p class="notice">
	<%= flash[:alert] %>
</p>
<% end %>
<%= form_tag do %>
	<fieldset>
		<legend>Log in</legend>		
		<div class="field">
			<%= label_tag :name %><br />
			<%= text_field_tag :name, params[:name] %>
		</div>
		<div class="field">
			<%= label_tag :password %><br />
			<%= password_field_tag :password, params[:password] %>
		</div>
		<div>
			<%= submit_tag 'Login' %>
		</div>
	</fieldset>
<% end %>
